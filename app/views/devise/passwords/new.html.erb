<div class = "wrap">

<div class = "main">

<h4>Forgot your password?</h4>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true , required: true, placeholder: "Enter an email" %></div>

  <div><%= f.submit "Send me reset password instructions", class: "btn btn-inverse" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
