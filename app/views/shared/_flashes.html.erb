<%- [:notice, :error, :alert].each do |kind| -%>
  <div class="alert <%= kind == 'notice' ? "success" : "error" %> screen-only flash <%= kind %> frame" <%= %q(style="display:none;").html_safe if flash[kind].blank? %> >
    <% [flash[kind]].flatten.each do |line| %>
    <div><%= line %></div>
    <% end %>
  </div>
<%- end -%>
