<h2>Create a new user</h2>
<br>
<br>
<div id="new_user">
<%= form_for @user, :url => manage_users_url do |f| %>
  <table class="table">
    <tr>
    <td><%= ("Email") %></td>
    <td><span class="span3">
      <%= f.email_field :email, required: true , type: "text", placeholder: "Input email"%>
      </span>
      <br>
    </td>
    </tr>
    <tr>
    <td></td>
    <div><td><span class="span3">
      <%= f.submit "Create", class: "btn" %>
      </span>
    </td>
    </div>
    </tr>
  </table>
</div>
<% end -%>
