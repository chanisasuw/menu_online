<div class="grid-block-container">
  <div class="well">
    <h5><%= food.name %><h5>

    <div class="image">
        <%= image_tag food.photo.url(:medium) %>
    </div>
    <% link_to("View", manage_food_path(food), method: "get" ) %>

        <i class="icon-map-marker"></i> Price: $<%= food.price %>
    <div class="icon-plus-sign"><%= link_to("Details", menu_path(food), method: "get" ) %> </div>


  <div class="grid-block <%= food.name %>">
    <div class="caption">
      <h3><%= food.name %></h3>
      <p><%= food.description %></p>
      <p><a class="btn btn-primary details"><%= link_to("Details", menu_path(food), method: "get" ) %></a></p>
    </div>
  </div>
  </div>
</div>

